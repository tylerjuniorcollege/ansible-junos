---
- name: Install Junos OS - EX3400 Virtual Chassis 
  hosts: Junos_all
  roles:
    - Juniper.junos 
  connection: netconf
  gather_facts: no
  
  vars:
    OS_version: 20.2R1-S2.1
    OS_package: junos-arm-32-20.2R1-S2.1.tgz
    pkg_dir: /var/lib/awx/custom-venv/junos/Firmware
    netconf_port: 830
    wait_time: 3600
    install_timeout: 2000
    checksum_timeout: 420

  tasks:
    - name: Checking NETCONF connectivity
      wait_for: 
        host: "{{ ansible_host }}" 
        port: "{{ netconf_port }}"
        timeout: 65

    - name: Install Junos OS package
      juniper_junos_software:
        version: "{{ OS_version }}"
        local_package: "{{ pkg_dir }}/{{ OS_package }}"
        kwargs: 
          unlink: true
        #nssu: yes # you have to set virtual-chassis preprovisioned 
        force_host: yes
        reboot: yes
      register: sw
      notify:
      - wait_reboot

    - name: Print response
      debug:
        var: response
